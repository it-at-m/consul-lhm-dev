<div class="admin-projekt-questions-list">
  <h2><%= t("custom.admin.projekts.projekt_questions.index.title") %></h2>

  <h4><%= t("custom.admin.projekts.projekt_questions.index.enable_projekt_list") %></h4>
  <%= render Admin::Settings::FeaturedSettingsFormComponent.new(ProjektSetting.find_by(projekt: @projekt, key: 'projekt_feature.questions.show_questions_list'), tab: '#tab-projekt-phases') %>

  <div class="float-right">
    <%= link_to t("custom.admin.projekts.projekt_questions.index.create"), new_projekt_question_path(@projekt.id), class: "button" %>
  </div>

  <div class="float-right">
    <%= link_to t("custom.admin.projekts.projekt_questions.index.send_notifications_button"), send_notifications_admin_projekt_projekt_questions_path(@projekt.id, params: { projekt_argument: { namespace: @namespace }}), method: :post, class: "button margin-right" %>
  </div>

  <div class="small-12 column">

    <% if @projekt.questions.any? %>
      <table class="stack">
       <thead>
          <tr>
            <th><%= t("custom.admin.projekts.projekt_questions.index.title") %></th>
            <th><%= t("custom.admin.projekts.projekt_questions.index.question_options") %></th>
            <th class="text-center"><%= t("custom.admin.projekts.projekt_questions.index.answers_count") %></th>
            <th class="text-center"><%= t("custom.admin.projekts.projekt_questions.index.comments_count") %></th>
            <th><%= t("admin.actions.actions") %></th>
          </tr>
        </thead>
        <tbody>
        <% @projekt.questions.root_questions.each do |question| %>
          <tr id="<%= dom_id(question) %>">
            <td>
              <%= link_to question.title, edit_projekt_question_path(@projekt, question) %>
            </td>
            <td>
              <ul>
                <% question.question_options.each do |question_option| %>
                  <li><%= "#{question_option.value} (#{question_option.answers_count})" %></li>
                <% end %>
              </ul>
            </td>
            <td class="text-center"><%= question.answers_count %></td>
            <td class="text-center"><%= link_to question.comments.count, legislation_process_question_path(@projekt, question, anchor: "comments") %></td>
            <td><%= render Admin::TableActionsComponent.new(question, edit_path: edit_projekt_question_path(@projekt, question), destroy_path: admin_projekt_projekt_question_path(@projekt, question, namespace: @namespace)) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>

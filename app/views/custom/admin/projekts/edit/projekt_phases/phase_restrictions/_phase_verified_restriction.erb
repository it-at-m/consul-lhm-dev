<div class="phase-verification-restrictions">
  <strong class='verification-restriction-title'><span class='verification-restriction-icon'><%= t("custom.projekt_phases.restrictions.verification.title") %></span></strong>
  <div class="projekt-phase-restriction-selector margin-bottom <%= 'gray-labels' if skip_user_verification? %>">

    <%= phase_form.radio_button :verification_restricted, false,
                               label: t('custom.projekt_phases.restrictions.verification.no_restriction' ),
                               disabled: skip_user_verification? %>
    <br>

    <%= phase_form.radio_button :verification_restricted, true,
                               label: t('custom.projekt_phases.restrictions.verification.only_verified' ),
                               disabled: skip_user_verification? %>
  </div>
</div>

<header>
  <div class="row">
    <div class="column">
      <div class="top-bar">

        <h2 class='header-title'>Öffentlichkeitsbeteiligung der<br><span>Landeshauptstadt München</span></h2>

        <span data-responsive-toggle="responsive-menu" data-hide-for="medium" class="hamburger-menu">
          <span class="menu-icon dark" data-toggle></span>
        </span>

        <div class="top-bar-title">
          <%= link_to "https://www.muenchen.de/rathaus/" do %>
            <%= image_tag(image_path_for("logo_header.png"), class: "float-left", alt: t("layouts.header.logo")) %>
          <% end %>
        </div>

        <div id="responsive-menu">
          <div class="top-bar-right">
            <div class="show-for-small-only">
              <div class="subnavigation row">

                <h2 class='city-name'>Öffentlichkeitsbeteiligung der Landeshauptstadt München</h2>

                <%= render "shared/subnavigation" %>
                <div class="small-12 column">
                  <%= render "shared/top_links" %>
                </div>
              </div>
            </div>
          </div>
        </div>


      </div>
    </div>
  </div>

  <div id="navigation_bar" class="subnavigation expanded">
    <div class="row">
      <div class="hide-for-small-only">
        <%= render "shared/subnavigation" %>
      </div>
    </div>
  </div>
</header>
